<UserControl xmlns="https://github.com/avaloniaui" 
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.Components.FrameThumbnail" 
             Cursor="Hand"
             DetachedFromVisualTree="Unloaded">

  <StackPanel Spacing="2" Background="Transparent" Orientation="Horizontal">
    <Image x:Name="FrameImage" Width="10" Height="10"/>
    <TextBlock VerticalAlignment="Center" x:Name="Time" />
  </StackPanel>
</UserControl>