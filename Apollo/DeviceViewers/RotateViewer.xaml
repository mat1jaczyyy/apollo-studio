<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.DeviceViewers.RotateViewer"
             xmlns:Components="clr-namespace:Apollo.Components"
             Margin="10 5"
             DetachedFromVisualTree="Unloaded">

  <StackPanel VerticalAlignment="Center">
    <Border BorderBrush="{DynamicResource ThemeBorderHighBrush}" BorderThickness="0 0 0 1">
      <ComboBox BorderThickness="0" Background="Transparent" HorizontalAlignment="Right" x:Name="RotateMode" SelectionChanged="Mode_Changed">
        <ComboBoxItem>90°</ComboBoxItem>
        <ComboBoxItem>180°</ComboBoxItem>
        <ComboBoxItem>270°</ComboBoxItem>
      </ComboBox>
    </Border>

    <CheckBox Margin="0 5 0 0" HorizontalAlignment="Center" x:Name="Bypass" Click="Bypass_Changed">Bypass</CheckBox>
  </StackPanel>
</UserControl>