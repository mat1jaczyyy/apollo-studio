<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             x:Class="Apollo.DeviceViewers.ClearViewer"
             xmlns:Components="clr-namespace:Apollo.Components"
             Margin="10 5"
             DetachedFromVisualTree="Unloaded">

  <Border VerticalAlignment="Center" Width="86" BorderBrush="{DynamicResource ThemeBorderHighBrush}" BorderThickness="0 0 0 1">
    <ComboBox BorderThickness="0" Background="Transparent" HorizontalAlignment="Center" x:Name="ClearMode" SelectionChanged="Mode_Changed">
      <ComboBoxItem>Lights Only</ComboBoxItem>
      <ComboBoxItem>Multi Only</ComboBoxItem>
      <ComboBoxItem>Both</ComboBoxItem>
    </ComboBox>
  </Border>
</UserControl>